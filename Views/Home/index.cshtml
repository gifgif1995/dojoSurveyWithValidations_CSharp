<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body>
    @using dojoSurveyWithValidations.Models
    @model User
    <div class="container text-center">
    <form class="m-4 shadow p-4" asp-action="Create" asp-controller="Home" method="post">
        <div class="form-group">
            <label asp-for="Name">Your Name</label>
            <input asp-for="Name" type="text" class="form-control"  placeholder="Name" name="Name">
            <span style="color: red" asp-validation-for="Name"></span>
        </div>
        <br>
        <div class="dropdown">
            <label asp-for="Location" class="my-1 mr-2">Location</label>
            <select required class="custom-select my-1 mr-sm-2" name="Location" required>
            <option value="">--------</option>
            <option value="Seattle">Seattle</option>
            <option value="San Francisco">San Francisco</option>
            <option value="Boise">Boise</option>
            <option value="San Jose">San Jose</option>
            <option value="New York">New York</option>
            </select>
            <span style="color: red" asp-validation-for="Location"></span>
        </div>
        <br>
        <div class="dropdown">
            <label asp-for="Language" class="my-1 mr-2">Favorite Stack / Language</label>
            <select  class="custom-select my-1 mr-sm-2" name="Language" required>
            <option value="">--------</option>
            <option value="C#">C#</option>
            <option value="Mern">Mern</option>
            <option value="Python">Python</option>
            <option value="JavaScript">JavaScript</option>
            </select>
            <span style="color: red" asp-validation-for="Language"></span>
        </div>
        <br>
        <div class="form-group">
            <label asp-for="Comment">Comment (optional)</label>
            <textarea class="form-control" rows="3" name="Comment"></textarea>
            <span style="color: red" asp-validation-for="Comment"></span>
        </div>
        <input class="btn btn-primary" type="submit" value="Submit">
    </form>
    </div>
</div>
</body>
</html>